@menuMargTop: 75px;
@colorbarH: 10px;
@logoH: 272px;
.top-colorbar {
	height: @colorbarH;
	background-color: @brownBg;
}
.navbar {
	margin-top: @menuMargTop;
}
.logo-spacer {
	height: @logoH * .7;
}
.navbar {
	.navbar-brand {
		@w: 265px;
		@h: @logoH;

		display: block;
		position: absolute;
		height: @h;
		width: @w;
		top: -@menuMargTop - @colorbarH - 1px;
		left: 50%;
		margin-left: -@w / 2;
		padding: 0;

		background-image: url(/pix/logo.png);
		background-repeat: no-repeat;
		text-indent: 150%;
		white-space: nowrap;
		overflow: hidden;

		z-index: 100;
	}
	.nav {
		width: 100%;
		li {
			position: relative;
			.btn {
				display: inline-block;
				padding: 0;
				position: absolute;
				top: 0;
				right: 0px;
				&.edit {
					right: 13px;
				}
				&.add {
					right: 29px;
				}
			}
		}
		> li {
			&.active > a {
				@borderH: 3px;
				border-bottom: solid @borderH @grayBorder;
				padding-bottom: @navbar-padding-vertical - @borderH;
				color: @text-color;
			}
			a {
				text-transform: uppercase;
				white-space: nowrap;
				margin: 0 5px;
				padding-left: @navbar-padding-horizontal - 9px;
				padding-right: @navbar-padding-horizontal - 9px;
			}

			&.open .dropdown-menu {
				li {
					@border: solid 1px #333;
					border-bottom: @border;
					&:first-child {
						border-top: @border;
					}
				}
			}
			@media (min-width: @screen-xs-max) {
				border-bottom: solid 1px @grayBorder; 
				border-top: solid 1px @grayBorder; 
				a {
					text-align: center;
				}
				&.open .arrow {
					.arrow(10px, @grayBorder);
				}
				.dropdown-menu {
					top: 130%;
					padding-top: 0;
					padding-bottom: 0;
				}
			}
			&.logo-placeholder{
				border-bottom: none;
				border-top: none;
				width: 230px;
				@media (min-width: @screen-lg-min) {
					width: 350px;
				}
			}
		}
	}
}